<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:maxLines="1"
            android:ellipsize="start"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sent result"
            android:visibility="invisible"
            app:cornerRadius="7dp"
            android:onClick="nextActivity"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:onClick="clickClear"
            style="@style/Gray.Button"
            android:text="AC"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onPlusMinusClick"
            style="@style/Gray.Button"
            android:text="+/-"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onPercentClick"
            style="@style/Gray.Button"
            android:text="%"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onOperationClick"
            style="@style/Orange.Button"
            android:text="รท"
            android:layout_marginHorizontal="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:onClick="onNumberClick"
            style="@style/Dark.Gray.Button"
            android:text="7"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onNumberClick"
            style="@style/Dark.Gray.Button"
            android:text="8"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onNumberClick"
            style="@style/Dark.Gray.Button"
            android:text="9"
            android:layout_marginHorizontal="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:onClick="onOperationClick"
            style="@style/Orange.Button"
            android:text="ร"
            android:layout_marginHorizontal="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="4"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="5"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="6"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onOperationClick"
                style="@style/Orange.Button"
                android:text="-"
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="1"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="2"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onNumberClick"
                style="@style/Dark.Gray.Button"
                android:text="3"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onOperationClick"
                style="@style/Orange.Button"
                android:text="+"
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Dark.Gray.Button"
                android:onClick="onNumberClick"
                android:text="0"
                android:textAlignment="textStart"
                android:paddingStart="32dp"
                android:layout_width="178dp"
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onDotClick"
                style="@style/Dark.Gray.Button"
                android:text="."
                android:layout_marginHorizontal="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:onClick="onEquallyClick"
                style="@style/Orange.Button"
                android:text="="
                android:layout_marginHorizontal="8dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>